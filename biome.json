{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf",
    "ignore": []
  },
  "organizeImports": {
    "enabled": true,
    "ignore": []
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "linter": {
    "rules": {
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "files": {
    "ignore": [
      "src/routeTree.gen.ts",
      "**/*.module.css.d.ts",
      "tailwind.config.js",
      "tsconfig.json",
      "tsconfig.*.json",
      ".devcontainer/"
    ]
  }
}
